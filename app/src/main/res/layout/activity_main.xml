<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        app:srcCompat="@drawable/logo" />

    <GridLayout
        android:layout_width="match_parent"

        android:layout_margin="10sp"
        android:columnCount="1"
        android:rowCount="2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="10dp">


        <Button
            android:id="@+id/help"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:text="Demande d'aide"
            android:background="#72B7FC"
            android:textColor="#ffffff"
            android:fontFamily="@font/bangersr"
            android:textSize="30dp"
            android:paddingTop="24dp"
            android:paddingBottom="15dp"
            android:drawableTop="@drawable/ic_baseline_enhanced_encryption_24"/>


        <Button
            android:id="@+id/retour"
            android:layout_width="150dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#E69B4C"
            android:fontFamily="@font/bangersr"
            android:text="ParamÃ¨tre"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:drawableTop="@drawable/ic_baseline_settings_24"
            android:paddingTop="24dp"
            android:paddingBottom="15dp"/>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

